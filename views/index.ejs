<div class="container">
<header class="jumbotron">
    <div class="container">
    <h1>Welcome to YelpCamp!</h1>
    <p>View our hand-picked campgrounds all over the world</p>
    <p>
        <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
    </p>
    </div>
</header>

<div class="row">
    <div class="col-lg-12">
        <h2>Our most popular Campgrounds!</h2>
    </div>
</div>

<div class="row" style="display:flex; flex-wrap:wrap;">
<%campgrounds.forEach(function(camp){%>
<div class="col-md-3 col-sm-6">
    <div class="thumbnail">
        
        <img src="<%=camp.image%>" width=250px height=250px>
        <div class="caption">
            <h4 align="center"><%=camp.name%></h4>
        </div>
        <p>
            <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
        </p>
    </div>


</div>
<%})%>
</div>
</div>

